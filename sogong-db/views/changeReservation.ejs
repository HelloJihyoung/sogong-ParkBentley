                        <% i = 2; %>
                        <tr><!-- 세번째 줄 시작 -->
                            <td><%=list[2].ReservationDate %></td>
                            <td><%=list[2].StartTime %> ~ <%=list[2].EndTime %></td>
                            <td><%=list[2].ReservationNum %></td>
                            <% if ( list[2].ReservationDate > todayDate ) { %>
                                <td><button type="submit" onclick="selectRes2()">예약 변경</button></td>
