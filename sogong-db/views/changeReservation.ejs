                        <% i = 3; %>
                        <tr><!-- 네번째 줄 시작 -->
                            <td><%=list[3].ReservationDate %></td>
                            <td><%=list[3].StartTime %> ~ <%=list[3].EndTime %></td>
                            <td><%=list[3].ReservationNum %></td>
                            <% if ( list[3].ReservationDate > todayDate ) { %>
                                <td><button type="submit" onclick="selectRes3()">예약 변경</button></td>
