                </tr><!-- 첫번째 줄 끝 -->
            <% } else { %> <!--로그인 했을 경우-->
                
                <% if(list[0]) { %>
                    <% i = 0; %>
                <tr><!-- 첫번째 줄 시작 -->
                    <td><%=list[0].ReservationDate %></td>
                    <td><%=list[0].StartTime %> ~ <%=list[0].EndTime %></td>
                    <td><%=list[0].ReservationNum %></td>
                    <% if ( list[0].ReservationDate > todayDate ) { %>
                        <td><button type="submit" onclick="selectRes0()">예약 변경</button></td>
                    <% } else if ( list[0].ReservationDate == todayDate ) { %>
                        <% if ( list[0].StartTime >= nowTime ) { %>
