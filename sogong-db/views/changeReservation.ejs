                        <td><%=list[1].ReservationDate %></td>
                        <td><%=list[1].StartTime %> ~ <%=list[0].EndTime %></td>
                        <td><%=list[1].ReservationNum %></td>
                        <% if ( list[1].ReservationDate > todayDate ) { %>
                            <td><button type="submit" onclick="selectRes1()">예약 변경</button></td>
                        <% } else if ( list[1].ReservationDate == todayDate ) { %>
                            <% if ( list[1].StartTime >= nowTime ) { %>
                                <td><button type="submit" onclick="selectRes1()">예약 변경</button></td>
                                    
                            <% } else { %>
                                <td><button type="button" onclick="location.href='/changeReservation'">변경 불가</button></td>
                            <% } %>
                        <% } else { %>
                            <td><button type="button" onclick="location.href='/changeReservation'">변경 불가</button></td>
